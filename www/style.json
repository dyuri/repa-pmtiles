{
  "version": 8,
  "name": "Hungarian Hiking Map - Dark",
  "glyphs": "http://localhost:8080/fonts/{fontstack}/{range}.pbf",
  "sources": {
    "hungary-hiking": {
      "type": "vector",
      "url": "pmtiles://http://localhost:8080/tiles/hungary-hiking.pmtiles",
      "attribution": "Â© OpenStreetMap contributors"
    },
    "contours": {
      "type": "vector",
      "url": "pmtiles://http://localhost:8080/tiles/hungary-contours.pmtiles",
      "attribution": "SRTM"
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": [
          "interpolate",
          ["exponential", 1],
          ["zoom"],
          5,
          "hsl(86, 30%, 22%)",
          14,
          "hsl(120, 4%, 22%)"
        ]
      }
    },
    {
      "id": "forest",
      "type": "fill",
      "source": "hungary-hiking",
      "source-layer": "landuse",
      "filter": ["==", "type", "forest"],
      "paint": {
        "fill-color": "hsl(103, 26%, 15%)",
        "fill-opacity": 1
      }
    },
    {
      "id": "grass",
      "type": "fill",
      "source": "hungary-hiking",
      "source-layer": "landuse",
      "filter": ["in", "type", "grass", "meadow", "park"],
      "paint": {
        "fill-color": "hsl(73, 27%, 20%)",
        "fill-opacity": 0.8
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "hungary-hiking",
      "source-layer": "water",
      "paint": {
        "fill-color": [
          "interpolate",
          ["linear"],
          ["zoom"],
          6,
          "hsl(210, 61%, 20%)",
          14,
          "hsl(210, 61%, 18%)"
        ]
      }
    },
    {
      "id": "waterway",
      "type": "line",
      "source": "hungary-hiking",
      "source-layer": "waterway",
      "paint": {
        "line-color": "hsl(210, 61%, 22%)",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          8, 0.5,
          14, 2
        ]
      }
    },
    {
      "id": "contour",
      "type": "line",
      "source": "contours",
      "source-layer": "contour",
      "minzoom": 11,
      "filter": [
        "all",
        ["!=", ["get", "elevation"], 0],
        ["!=", ["%", ["get", "elevation"], 100], 0]
      ],
      "layout": {
        "line-cap": "square"
      },
      "paint": {
        "line-color": "hsl(36, 24%, 43%)",
        "line-width": 0.5,
        "line-opacity": [
          "interpolate",
          ["linear"],
          ["zoom"],
          11, 0.2,
          13, 0.5,
          15, 0.7
        ]
      }
    },
    {
      "id": "contour-index",
      "type": "line",
      "source": "contours",
      "source-layer": "contour",
      "minzoom": 10,
      "filter": [
        "all",
        ["!=", ["get", "elevation"], 0],
        ["==", ["%", ["get", "elevation"], 100], 0]
      ],
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "line-color": "hsl(36, 24%, 35%)",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          10, 0.8,
          13, 1.2,
          15, 1.8
        ],
        "line-opacity": [
          "interpolate",
          ["linear"],
          ["zoom"],
          10, 0.3,
          13, 0.6,
          15, 0.8
        ]
      }
    },
    {
      "id": "buildings",
      "type": "fill",
      "source": "hungary-hiking",
      "source-layer": "buildings",
      "minzoom": 13,
      "paint": {
        "fill-color": "hsl(0, 0%, 25%)",
        "fill-opacity": 0.6
      }
    },
    {
      "id": "roads",
      "type": "line",
      "source": "hungary-hiking",
      "source-layer": "roads",
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": [
          "match",
          ["get", "type"],
          "motorway", "hsl(26, 87%, 47%)",
          "trunk", "hsl(30, 84%, 53%)",
          "primary", "hsl(46, 77%, 56%)",
          "secondary", "hsl(60, 60%, 55%)",
          "tertiary", "hsl(0, 0%, 42%)",
          ["residential", "unclassified", "living_street"], "hsl(0, 0%, 38%)",
          ["service", "road", "minor"], "hsl(0, 0%, 32%)",
          "hsl(0, 0%, 35%)"
        ],
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          5, [
            "match",
            ["get", "type"],
            "motorway", 0.5,
            0
          ],
          9, [
            "match",
            ["get", "type"],
            ["motorway", "trunk"], 1.5,
            ["primary", "secondary"], 0.8,
            0.3
          ],
          12, [
            "match",
            ["get", "type"],
            "motorway", 4,
            "trunk", 3.5,
            "primary", 2.5,
            "secondary", 2,
            "tertiary", 1.5,
            ["residential", "unclassified", "living_street"], 1,
            ["service", "road", "minor"], 0.5,
            1
          ],
          14, [
            "match",
            ["get", "type"],
            "motorway", 5,
            "trunk", 4,
            "primary", 3,
            "secondary", 2.5,
            "tertiary", 2,
            ["residential", "unclassified", "living_street"], 1.5,
            ["service", "road", "minor"], 1,
            1.5
          ],
          16, [
            "match",
            ["get", "type"],
            "motorway", 10,
            "trunk", 8,
            "primary", 6,
            "secondary", 5,
            "tertiary", 4,
            ["residential", "unclassified", "living_street"], 3,
            ["service", "road", "minor"], 2,
            3
          ]
        ]
      }
    },
    {
      "id": "road-labels",
      "type": "symbol",
      "source": "hungary-hiking",
      "source-layer": "roads",
      "filter": ["has", "name"],
      "minzoom": 12,
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Noto Sans Regular"],
        "text-size": [
          "interpolate",
          ["linear"],
          ["zoom"],
          12, 9,
          16, 12
        ],
        "symbol-placement": "line",
        "text-rotation-alignment": "map",
        "text-pitch-alignment": "viewport",
        "text-max-angle": 30
      },
      "paint": {
        "text-color": [
          "match",
          ["get", "type"],
          ["motorway", "trunk", "primary", "secondary"], "hsl(60, 80%, 75%)",
          "hsl(0, 0%, 65%)"
        ],
        "text-halo-color": "hsl(0, 0%, 10%)",
        "text-halo-width": 2
      }
    },
    {
      "id": "trails",
      "type": "line",
      "source": "hungary-hiking",
      "source-layer": "trails",
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "hsl(15, 85%, 55%)",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          10, 1.5,
          14, 3,
          16, 4
        ]
      }
    },
    {
      "id": "pois",
      "type": "circle",
      "source": "hungary-hiking",
      "source-layer": "pois",
      "minzoom": 12,
      "paint": {
        "circle-radius": [
          "match",
          ["get", "type"],
          "peak", 6,
          "viewpoint", 5,
          "alpine_hut", 5,
          "shelter", 4,
          3
        ],
        "circle-color": [
          "match",
          ["get", "type"],
          "peak", "hsl(25, 65%, 50%)",
          "viewpoint", "hsl(355, 75%, 65%)",
          "alpine_hut", "hsl(180, 55%, 55%)",
          "shelter", "hsl(200, 60%, 60%)",
          "drinking_water", "hsl(210, 70%, 60%)",
          "hsl(0, 0%, 60%)"
        ],
        "circle-stroke-width": 2,
        "circle-stroke-color": "hsl(0, 0%, 15%)"
      }
    },
    {
      "id": "contour-labels",
      "type": "symbol",
      "source": "contours",
      "source-layer": "contour",
      "minzoom": 13,
      "filter": ["==", ["%", ["get", "elevation"], 100], 0],
      "layout": {
        "symbol-avoid-edges": true,
        "symbol-placement": "line",
        "text-allow-overlap": false,
        "text-field": "{elevation}m",
        "text-font": ["Noto Sans Regular"],
        "text-size": 9,
        "text-rotation-alignment": "map"
      },
      "paint": {
        "text-color": "hsl(38, 50%, 60%)",
        "text-halo-color": "hsl(120, 4%, 18%)",
        "text-halo-width": 1.5
      }
    },
    {
      "id": "poi-labels",
      "type": "symbol",
      "source": "hungary-hiking",
      "source-layer": "pois",
      "filter": ["has", "name"],
      "minzoom": 13,
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Noto Sans Regular"],
        "text-size": 10,
        "text-anchor": "top",
        "text-offset": [0, 0.8]
      },
      "paint": {
        "text-color": "hsl(0, 0%, 85%)",
        "text-halo-color": "hsl(0, 0%, 10%)",
        "text-halo-width": 1.5
      }
    },
    {
      "id": "trail-labels",
      "type": "symbol",
      "source": "hungary-hiking",
      "source-layer": "trails",
      "filter": ["has", "name"],
      "minzoom": 13,
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Noto Sans Regular"],
        "text-size": 11,
        "symbol-placement": "line",
        "text-rotation-alignment": "map"
      },
      "paint": {
        "text-color": "hsl(15, 85%, 65%)",
        "text-halo-color": "hsl(0, 0%, 10%)",
        "text-halo-width": 2
      }
    },
    {
      "id": "place-labels",
      "type": "symbol",
      "source": "hungary-hiking",
      "source-layer": "place_labels",
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Noto Sans Bold"],
        "text-size": [
          "match",
          ["get", "type"],
          "city", 18,
          "town", 15,
          "village", 12,
          10
        ]
      },
      "paint": {
        "text-color": "hsl(0, 0%, 90%)",
        "text-halo-color": "hsl(0, 0%, 10%)",
        "text-halo-width": 2
      }
    }
  ]
}
